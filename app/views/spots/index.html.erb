  <div id="map" class="tab-pane fade">
    <link rel="stylesheet" href="https://js.arcgis.com/3.18/esri/css/esri.css">

    <style>
      #info {
        top: 20px;
        color: #444;
        height: auto;
        font-family: arial;
        right: 20px;
        margin: 5px;
        padding: 10px;
        position: absolute;
        width: 115px;
        z-index: 40;
        border: solid 2px #666;
        border-radius: 4px;
        background-color: #fff;
      }
      html, body, #mapDiv {
        padding:0;
        margin:0;
        height:100%;
      }
      button {
        display: block;
      }
    </style>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://js.arcgis.com/3.18/"></script>
    <script>
      var map, tb;

      require([
        "esri/map", "esri/toolbars/draw", "esri/geometry/Point",
        "esri/symbols/SimpleMarkerSymbol", "esri/symbols/SimpleLineSymbol",
        "esri/symbols/PictureFillSymbol", "esri/symbols/CartographicLineSymbol", 
        "esri/graphic", "esri/symbols/TextSymbol",
        "esri/Color", "dojo/dom", "dojo/on", "dojo/domReady!"
      ], function(
        Map, Draw, Point,
        SimpleMarkerSymbol, SimpleLineSymbol,
        PictureFillSymbol, CartographicLineSymbol, 
        Graphic, TextSymbol,
        Color, dom, on
      ) {
        map = new Map("mapDiv", {
          basemap: "streets",
          center: [-79.055, 35.91],
          zoom: 14
        });
        map.on("load", initToolbar);

        // markerSymbol is used for point and multipoint, see http://raphaeljs.com/icons/#talkq for more examples
        var markerSymbol = new SimpleMarkerSymbol();
        //markerSymbol.setPath("");
        markerSymbol.setColor(new Color("#00FFFF"));

        var textSymbol =  new TextSymbol("Hello World");
        var customTextSymbol = function(text) {
        	return TextSymbol(text);
        }

        // lineSymbol used for freehand polyline, polyline and line. 

        // fill symbol used for extent, polygon and freehand polygon, use a picture fill symbol
        // the images folder contains additional fill images, other options: sand.png, swamp.png or stiple.png
        function initToolbar() {
          tb = new Draw(map);
          //tb.on("draw-end", addGraphic);

          // event delegation so a click handler is not
          // needed for each individual button
          on(dom.byId("info"), "click", function(evt) {
            if ( evt.target.id === "info" ) {
              return;
            }
            var tool = evt.target.id.toLowerCase();
            map.disableMapNavigation();
            tb.activate(tool);
          });
        }
        var center = {
          	x: -79.055, 
          	y: 35.91
        };
        function addPoint(x, y) {
        	map.graphics.add(new Graphic(
        		new Point({x: x, y: y})
        		, markerSymbol));
        }
        map.on('load', function() {
        	var addresses = [
        		'101 Raleigh Street, chapel hill, nc',
        		'110 Country Club Road, chapel hill, nc',
        		'105 Stadium Drive , chapel hill, nc',
        		'memorial hall, chapel hill, nc',
        		'204 raleigh st, chapel hill, nc',
        		'300 E Main St, Carrboro, NC 27510'
        		];
        	addresses.forEach(function(address){
        		$.ajax({
        		'url': 'https://maps.googleapis.com/maps/api/geocode/json?address='+address
        		}).done(function(json){
        			addPoint(
        				json.results[0].geometry.location.lng,
        				json.results[0].geometry.location.lat
        				);

		        	map.graphics.add(new Graphic(
		        		new Point({x: json.results[0].geometry.location.lng, 
		        			y: json.results[0].geometry.location.lat})
		        		, customTextSymbol(address)));
		        		});
        	});
        });
        
      });
    </script>
  </head>
  <body>
  <div id="info">
      <div>Select a shape then draw on map to add graphic</div>
      <button id="Point">Point</button>
    </div>

    <div id="mapDiv"></div>
  </body>
  </div>
