<h1>Create a New Spot</h1>

<%= form_for(@spot) do |f| %>
  <ul>
  <% @spot.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.range_field :price, in: 1..100 %><br />
  </p>
  <p>
    <%= f.text_area :latitude %><br />
    <%= f.text_area :longitude %>
  </p>
  <p>
    <%= f.label :image, "Attach an Image" %><br />
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
